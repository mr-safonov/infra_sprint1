########################
# TASKI
########################

# HTTP -> HTTPS редирект для Taski
server {
    listen 80;
    server_name taski.uchebayapraktikum.ru;

    return 301 https://$host$request_uri;
}

# HTTPS-сервер для Taski
server {
    listen 443 ssl;
    server_name taski.uchebayapraktikum.ru;

    # Прокидываем API и админку на бэкенд Taski (gunicorn на 127.0.0.1:8000)
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
    }

    # Фронтенд Taski (React)
    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    ssl_certificate     /etc/letsencrypt/live/taski.uchebayapraktikum.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/taski.uchebayapraktikum.ru/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;
}

########################
# KITTYGRAM
########################

# HTTP -> HTTPS редирект для Kittygram
server {
    listen 80;
    server_name kittygram.uchebayapraktikum.ru;

    return 301 https://$host$request_uri;
}

# HTTPS-сервер для Kittygram
server {
    listen 443 ssl;
    server_name kittygram.uchebayapraktikum.ru;

    location /api/ {
        client_max_body_size 20M;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:8080;
    }

    location /admin/ {
        client_max_body_size 20M;
        proxy_set_header Host $host;
        proxy_pass http://127.0.0.1:8080;
    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }

    location /static_backend/ {
        alias /var/www/kittygram/static_backend/;
        access_log off;
        expires 7d;
    }

    location /media/ {
        alias /var/www/kittygram/media/;
        access_log off;
        expires 7d;
    }

    ssl_certificate     /etc/letsencrypt/live/kittygram.uchebayapraktikum.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/kittygram.uchebayapraktikum.ru/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;
}

